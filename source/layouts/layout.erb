<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>

    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>
    <!-- Google fonts -->
    <%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Open+Sans:400,300,700|Montserrat:400,700,300" %>

  </head>

  <body class="<%= page_classes %>">
    <nav class="navbar navbar-default navbar-fixed-top navbar-wagon" role="navigation">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <% link_to "/index.html", class: "navbar-brand" do %>
            <%= image_tag 'logo.svg' %>
          <% end %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

          <ul class="nav navbar-nav navbar-right">
            <li>
              <% link_to "/pricing.html" do %>
                <i class="fa fa-dollar"></i> Pricing
              <% end %>
            </li>
            <li>
              <% link_to "/contact.html" do %>
                <i class="fa fa-envelope-o"></i> Contact
              <% end %>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Follow-us <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li>
                  <% link_to "https://www.facebook.com/lewagonformation" do %>
                    <i class="fa fa-facebook-square"></i> Facebook
                  <% end %>
                </li>
                  <% link_to "https://twitter.com/lewagonparis" do %>
                    <i class="fa fa-twitter-square"></i> Facebook
                  <% end %>
              </ul>
            </li>
            <li>
              <%= link_to "Order now", "#", :class => "btn", :data_target => "#subscribe-modal", :data_toggle => "modal" %>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <%= yield %>
  </body>
</html>
